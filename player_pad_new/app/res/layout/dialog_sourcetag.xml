<?xml version="1.0" encoding="utf-8"?><!-- 来源 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/moviedetial_currentsourcelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/moviedetial_sourceselectlayout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="45dp">

        <ImageView
            android:id="@+id/current_sourceIcon"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/current_sourceTag"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/source_arrowdown"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:src="@drawable/moviedetial_sourceshadow_down" />
    </LinearLayout>

    <Button
        android:id="@+id/moviedetial_descbtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:drawableLeft="@drawable/moviedetial_arraw_up"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="36dp"
        android:paddingTop="5dp"
        android:text="正序"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/moviedetial_descbtn"
        android:layout_marginTop="5dp"
        android:fillViewport="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <cn.pipi.mobile.pipiplayer.view.MyGridView
                android:id="@+id/source_gridview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/moviedetial_descbtn"
                android:layout_marginBottom="10dp"
                android:background="@drawable/moviedetial_sourcebg"
                android:cacheColorHint="@android:color/transparent"
                android:columnWidth="60dp"
                android:horizontalSpacing="35dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="5"
                android:paddingBottom="15dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="25dp"
                android:verticalSpacing="20dp"
                android:visibility="gone" />


            <cn.pipi.mobile.pipiplayer.view.MyGridView
                android:id="@+id/position_gridview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/source_gridview"
                android:cacheColorHint="@android:color/transparent"
                android:columnWidth="70dp"
                android:horizontalSpacing="28dp"
                android:numColumns="9"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:verticalSpacing="20dp" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>


