<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/moviedetial_toplayout"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:layout_alignParentTop="true"
    android:background="#DC0000">

    <ImageView
        android:id="@+id/moviedetial_backimgview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/moviedetial_back" />

    <TextView
        android:id="@+id/moviedetial_nametextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/moviedetial_backimgview"
        android:textColor="@color/white"
        android:textSize="21sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/actionbar_search"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:src="@drawable/menu_search" />

        <ImageView
            android:id="@+id/actionbar_history"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:src="@drawable/menu_histroy" />

        <ImageView
            android:id="@+id/actionbar_download"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="35dp"
            android:src="@drawable/menu_down" />
    </LinearLayout>
</RelativeLayout>