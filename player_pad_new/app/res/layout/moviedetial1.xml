<?xml version="1.0" encoding="utf-8"?>
<!-- 电影详情界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- 详情 头部   android:layout_weight="0.0797"-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/actionbarbg" >

        <ImageView
            android:id="@+id/moviedetial_backimgview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/moviedetial_back" />

        <TextView
            android:id="@+id/moviedetial_nametextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/moviedetial_backimgview"
            android:textColor="@color/black"
            android:textSize="21sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp" >

            <TextView
                android:id="@+id/actionbar_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/actionbar_search" />

            <TextView
                android:id="@+id/actionbar_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/actionbar_history" />

            <TextView
                android:id="@+id/actionbar_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/actionbar_download" />
        </LinearLayout>
    </RelativeLayout>

    <!--  android:layout_weight="0.92" -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <!-- 播放 收藏 选集 下载 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/moviedetial_frame_player"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.68" 
                android:orientation="vertical"
                />

            <!-- 来源和排序 -->

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.32" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <!-- 选集 -->

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.28" >

                        <RadioGroup
                            android:id="@+id/moviedetial_selectradiogroup"
                            android:layout_width="200dp"
                            android:layout_height="fill_parent"
                            android:checkedButton="@+id/moviedetial_selectbtn1"
                            android:orientation="horizontal"
                            android:weightSum="2" >

                            <RadioButton
                                android:id="@+id/moviedetial_selectbtn1"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/moviedetial_selectbtnbg"
                                android:button="@null"
                                android:gravity="center"
                                android:text="选集"
                                android:textColor="@color/red" />

                            <RadioButton
                                android:id="@+id/moviedetial_selectbtn2"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/moviedetial_selectbtnbg"
                                android:button="@null"
                                android:gravity="center"
                                android:text="下载"
                                android:textColor="@color/black" />
                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingRight="48dp" >

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="45dp"
                                android:background="@drawable/moviedetial_store" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/moviedetial_share" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.35"
                        android:background="@color/yellow" >

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/moviedetial_descbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="排序"
                            android:textColor="@color/black" />
                    </RelativeLayout>

                    <!-- cn.pipi.mobile.pipiplayer.view.MyGridView -->

                    <cn.pipi.mobile.pipiplayer.view.MyGridView
                        android:id="@+id/moviedetial_gridview"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.37"
                        android:columnWidth="80dp"
                        android:horizontalSpacing="35dp"
                        android:verticalSpacing="20dp"
                        android:numColumns="8"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp" >
                    </cn.pipi.mobile.pipiplayer.view.MyGridView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <!-- 详情评论  猜你喜欢 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:paddingLeft="13dp" >

            <RadioGroup
                android:id="@+id/movietdetial_inforadiogroup"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:checkedButton="@+id/moviedetial_inforaidobtn"
                android:orientation="horizontal"
                android:weightSum="2" >

                <RadioButton
                    android:id="@+id/moviedetial_inforaidobtn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/moviedetial_rightradiobtnbg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="详情"
                    android:textColor="@color/red"
                    android:textSize="18sp" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/moviedetial_rightradiobtnbg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="评论"
                    android:textSize="18sp" />
            </RadioGroup>
            <!-- 详情或评论 -->

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:paddingRight="20dp"
                    android:paddingTop="18dp" >

                    <TextView
                        android:id="@+id/moviedetial_moviename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp" >

                        <TextView
                            android:id="@+id/moviedetial_movieactor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/moviedetial_synthesis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/moviedetial_moviedescribe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textSize="16sp" />
                </LinearLayout>
            </FrameLayout>

            <ListView
                android:id="@+id/moviedetial_recommendlistview"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>