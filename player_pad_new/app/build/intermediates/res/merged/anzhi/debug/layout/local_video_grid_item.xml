<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="190dip"
    android:layout_height="205dip"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/down_gridviewitembg"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ml_item_thumbnail"
            android:layout_width="190dp"
            android:layout_height="125dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal" />
        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:id="@+id/ml_item_progress"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:minHeight="2dip"
            android:maxHeight="2dip"
            android:progressDrawable="@drawable/gridview_progressbar"
            android:focusable="false"
            android:indeterminate="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ml_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="@color/list_title" />
        <TextView
            android:id="@+id/ml_item_subsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:singleLine="true"
            android:textColor="@color/list_subtitle"
            android:paddingLeft="12dip" />
        <TextView
            android:id="@+id/ml_item_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:singleLine="true"
            android:textColor="@color/list_subtitle" />
    </LinearLayout>
    <ImageView
        android:id="@+id/ml_item_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dropdown_ic_arrow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:clickable="true" />
</RelativeLayout><!-- From: file:/D:/SmartGit/workspace/MyProject/player_pad_new/app/res/layout/local_video_grid_item.xml -->