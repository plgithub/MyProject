<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/suggestion"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/suggest_toplayout"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" >

        <Button
            android:id="@+id/suggest_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/moviedetial_back" />

        <TextView
            android:id="@+id/suggest_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="意见和建议"
            android:textColor="@color/black"
            android:textSize="28sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/suggest_toplayout"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="35dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="35dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/suggestion_bottomlayout"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/suggestion_adviceContent"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@drawable/suggetion_editview_bg"
                android:hint="您的意见和建议是我们不断提高的动力"
                android:paddingLeft="8dp" />

            <EditText
                android:id="@+id/suggestion_advicetp"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginTop="35dp"
                android:layout_weight="1"
                android:background="@drawable/suggetion_editview_bg"
                android:hint="输入手机号码 (可空缺)"
                android:inputType="number"
                android:numeric="integer"
                android:paddingLeft="8dp" />

            <EditText
                android:id="@+id/suggestion_adviceqq"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:background="@drawable/suggetion_editview_bg"
                android:hint="输入QQ号码 (可空缺)"
                android:inputType="number"
                android:numeric="integer"
                android:paddingLeft="8dp" />

            <EditText
                android:id="@+id/suggestion_adviceemail"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:background="@drawable/suggetion_editview_bg"
                android:hint="输入邮箱 (可空缺)"
                android:inputType="textEmailAddress"
                android:paddingLeft="8dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/suggestion_bottomlayout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/suggestion_cannelbtn"
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="56dp"
                    android:background="@drawable/suggetion_editview_bg"
                    android:focusable="true"
                    android:text="清空"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/suggestion_commitbtn"
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="56dp"
                    android:background="@drawable/suggetion_editview_bg"
                    android:focusable="true"
                    android:text="提交"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/D:/SmartGit/workspace/MyProject/player_pad_new/app/res/layout/suggestion.xml -->