<?xml version="1.0" encoding="utf-8"?><!-- 下载界面布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/download_toplayout"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:background="#DC0000">

        <ImageView
            android:id="@+id/download_backimgview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/moviedetial_back" />

        <RadioGroup
            android:id="@+id/download_radiogroup"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/download_backimgview"
            android:checkedButton="@+id/download_radio_download"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/download_radio_download"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/download_radiobtn_bg"
                android:button="@null"
                android:gravity="center"
                android:text="下载"
                android:textColor="@drawable/radio_textcolor"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/download_radio_local"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/download_radiobtn_bg"
                android:button="@null"
                android:gravity="center"
                android:text="本地"
                android:textColor="@drawable/radio_textcolor"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/download_radio_store"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/download_radiobtn_bg"
                android:button="@null"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@drawable/radio_textcolor"
                android:textSize="18sp" />
        </RadioGroup>
        <!-- 缓存大小 sd 剩余大小 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/download_radiogroup"
            android:orientation="horizontal">

            <Button
                android:id="@+id/download_setbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/seticon" />

            <TextView
                android:id="@+id/download_videocache"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/download_availablecache"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/download_allpause"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:paddingLeft="65dp"
                android:text="全部暂停"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/download_edit"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="30dp"
                android:text="编辑"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/download_linetextview"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/download_toplayout"
        android:background="#ffd3d3d3" />

    <FrameLayout
        android:id="@+id/download_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/download_linetextview"
        android:descendantFocusability="blocksDescendants"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp">

        <!-- 下载 -->

        <TextView
            android:id="@+id/empty_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="暂无内容..." />

        <GridView
            android:id="@+id/download_downgridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cacheColorHint="@android:color/transparent"
            android:horizontalSpacing="18dp"
            android:listSelector="@color/full_transparent"
            android:numColumns="6"
            android:scrollbars="none"
            android:verticalSpacing="20dp"
            android:clickable="true"
            android:descendantFocusability="afterDescendants"/>
        <!-- 本地  暂放空布局 碎片orgridview -->
        <FrameLayout
            android:id="@+id/fragment_placeholder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <!-- 收藏 -->

        <GridView
            android:id="@+id/download_storegridview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="@android:color/transparent"
            android:columnWidth="190dp"
            android:horizontalSpacing="18dp"
            android:listSelector="@color/full_transparent"
            android:numColumns="6"
            android:verticalSpacing="20dp"
            android:visibility="gone" />

        <!-- tips emptylayout -->
    </FrameLayout>

    <LinearLayout
        android:id="@+id/download_shadowslayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/download_linetextview"
        android:background="@color/transparent_gray"
        android:orientation="vertical"
        android:visibility="gone" />



</RelativeLayout><!-- From: file:/D:/SmartGit/workspace/MyProject/player_pad_new/app/res/layout/download.xml -->