<?xml version="1.0" encoding="utf-8"?><!-- 下载列表  gridview 适配器 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemview_layout"
    android:layout_width="fill_parent"
    android:layout_height="300dp"
    android:background="@drawable/down_gridviewitembg"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/download_framelayout"
        android:layout_width="fill_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/download_downimg"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/transparent_gray"
            android:paddingRight="15dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sourceIcon1"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />

                <TextView
                    android:id="@+id/sourceTag1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@+id/sourceIcon1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/play_btn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:src="@drawable/moviedetial_play" />

            <ImageView
                android:id="@+id/download_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="25dp"
                android:src="@drawable/download_downlist_select_normol"
                android:visibility="invisible" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:visibility="gone">


                <TextView
                    android:id="@+id/speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/download_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="暂停"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <!-- android:background="@drawable/download_downlist_bottombg" -->
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/download_framelayout"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/download_downposition"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="第一集"
            android:textColor="@color/gray"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/sourceIcon2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toLeftOf="@+id/sourceTag2" />

        <TextView
            android:id="@+id/sourceTag2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/download_downspeed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/download_downposition"
            android:singleLine="true"
            android:text="hello"
            android:textColor="@color/gray"
            android:textSize="15sp" />
    </RelativeLayout>


</RelativeLayout><!-- From: file:/D:/SmartGit/workspace/MyProject/player_pad_new/app/res/layout/download_detail_item.xml -->